extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errorMessage
            .user-message.user-message--error #{errorMessage}
        //- novalidate -> form에 넣어서 사용하는 속성, 유효성 검사를 막는 기능을 함
        form.login-form(action='/signup', method="POST" novalidate)
            .form-control
                label(for="email") E-mail
                input.eamil(type="email", name="email" value=oldInput.email)
            .form-control
                label(for="password") Password
                input.password(type="password", name="password" value=oldInput.password)
            .form-control
                label(for="confirmPassword") Confirm Password
                input.confirmPassword(type="password", name="confirmPassword" value=oldInput.confirmPassword)
            input(type="hidden" value=csrfTotken name="_csrf")
            button.btn(type="submit") Signup