extends ../layouts/main-layout.pug

block styles
    <link rel="stylesheet" href="/css/cart.css">
block content 
    main
        ul.cart__item-list
            each p in products
                li.cart__item 
                    h1 #{p.productId.title}
                    h2 Quantity: #{p.quantity}
        .centered 
            h2 Total: #{totalSum}