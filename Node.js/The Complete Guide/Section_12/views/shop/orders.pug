extends ../layouts/main-layout.pug

block styles
    <link rel="stylesheet" href="/css/cart.css">
block content 
    main
        if orders.length > 0 
            ul.cart__item-list
                each order in orders
                    li.cart__item 
                        h1 #{order.id}
                            ul
                                each product in order.products
                                    li #{product.title} (#{product.orderItem.quantity})
        else 
            h1 No Products