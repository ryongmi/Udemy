extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content 
    main
        if errorMessage
            .user-message.user-message--error #{errorMessage}
        form.login-form(action='/login', method="POST" novalidate)
            .form-control
                label(for="email") E-mail
                input(class=validationErrors.find(e => e.param === 'email') ? 'invalid' : '' type="email", name="email" value=oldInput.email)#eamil
            .form-control
                label(for="password") Password
                input(class=validationErrors.find(e => e.param === 'password') ? 'invalid' : '' type="password", name="password" value=oldInput.password)#password
            input(type="hidden" value=csrfToken name="_csrf")
            button.btn(type="submit") Login

        .centered
            a(href="/reset") Reset Password