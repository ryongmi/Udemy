<Window x:Class="_2nd_control._2nd_ctls.progressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2nd_control._2nd_ctls"
        mc:Ignorable="d"
        Title="progressBar" Height="305.04" Width="316.206">
    <Grid>
        <ProgressBar HorizontalAlignment="Left" Height="29" Margin="32,91,0,0" VerticalAlignment="Top" Width="232" IsIndeterminate="True"/>
        <ProgressBar x:Name="pgb" HorizontalAlignment="Left" Height="29" Margin="32,146,0,0" VerticalAlignment="Top" Width="232" ValueChanged="pgb_ValueChanged" />
        <Button x:Name="incr_btn" Content="+" HorizontalAlignment="Left" Margin="95,224,0,0" VerticalAlignment="Top" Width="36" Height="30" Click="incr_btn_Click"/>
        <Button x:Name="desc_btn" Content="-" HorizontalAlignment="Left" Margin="153,224,0,0" VerticalAlignment="Top" Width="36" Height="30" Click="desc_btn_Click"/>
        <Label x:Name="lbl" Content="0%" HorizontalAlignment="Left" Margin="136,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.461,0.479" Width="36"/>
        <!--
        IsIndeterminate : 진행률이 %로 보이는 것이 아니라, 왼쪽에서 오른쪽으로 이동함. 진행률을 모를때 사용하면 좋음.
        -->

    </Grid>
</Window>
